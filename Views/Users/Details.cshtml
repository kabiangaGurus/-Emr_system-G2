@model Group2.Models.UsersDetailsViewModel

@{
    ViewData["Title"] = "Details";
}
<div class="text-center">



</div>
<p></p>
<div class="row">
    
    <div class="col-sm-12">
        <div class="container">
            <div class="row">

                <div class="img-thumbnail" style="padding:24px">
                    <h4 class="text-center">Patient personal information</h4>
                    <div style="height:3px;width:100%;background-color:#00396e"></div>

                    <div class=" " style="margin-top:16px">
                        <div class="img-thumbnail" style="background-color:whitesmoke;padding:8px">
                            <div class="container">
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.users.fULL_NAME)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.users.fULL_NAME)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.users.d_O_b)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.users.d_O_b)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Gender
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.users.GENDER)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.users.uSERNAME)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.users.uSERNAME)
                                    </dd>

                                    <dt class="col-sm-2">
                                        Identity
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.users.uniqueId)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Location
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.users.LOCATION)
                                    </dd>
                                    <dt class="col-sm-2">
                                        Phone
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.users.PHONE)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                    <h4 class="text-center">Patient  health history</h4>
                    <div style="height:3px;width:100%;background-color:#00396e"></div>

                    <div class=" " style="margin-top:16px">
                        <div class="img-thumbnail" style="background-color:whitesmoke;padding:8px">
                            <table class="table table-responsive text-center table-bordered">
                                <thead class="bg-secondary text-white">
                                    <tr>

                                        <th>
                                            @Html.DisplayNameFor(model => model.date)
                                        </th>
                                        <th>
                                            Doctor
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Institution)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsDiagnosed)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Problem)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Comment)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (UserDetails item in Model.UserDetails)
                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DocId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Institution)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsDiagnosed)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Problem)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Comment)
                                            </td>
                                            <td>

                                                <a asp-action="Details" asp-controller="UserDetails" asp-route-id="@item.Id">View</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <h4 class="text-center">Doctor's Remarks</h4>
                    <div style="height:3px;width:100%;background-color:#00396e"></div>

                    <div class=" " style="margin-top:16px">
                        <div class="img-thumbnail" style="background-color:whitesmoke;padding:8px">


                            <form asp-action="CreateUserDetails">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="UswerId" value="@Model.users.Id" />
                                <input type="hidden" asp-for="date" value="@DateTime.Now" />

                                <input type="hidden" asp-for="DocId" value="@User.Identity.Name" />
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="Institution" class="control-label"></label>
                                            <input asp-for="Institution" class="form-control" />
                                            <span asp-validation-for="Institution" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="IsDiagnosed" class="control-label"></label>
                                            <input asp-for="IsDiagnosed" class="form-control" />
                                            <span asp-validation-for="IsDiagnosed" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="Problem" class="control-label"></label>
                                            <input asp-for="Problem" class="form-control" />
                                            <span asp-validation-for="Problem" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Comment" class="control-label"></label>
                                            <input asp-for="Comment" class="form-control" />
                                            <span asp-validation-for="Comment" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group text-right">
                                    <input type="submit" value="Update" class="btn btn-outline-secondary" />
                                </div>
                            </form>


                        </div>
                    </div>



                    <h4 class="text-center">Actions</h4>
                    <div style="height:3px;width:100%;background-color:#00396e"></div>

                    <div class=" " style="margin-top:16px">
                        <div class="img-thumbnail" style="background-color:whitesmoke;padding:8px">


                            <div class="container">
                                <div class="row">
                                    <div class="col-4">
                                        <a asp-action="reffer" asp-controller="Users" class="btn btn-outline-secondary">Reffer Patien</a>
                                       
                                    </div>
                                    <div class="col-4">
                                        <a asp-action="reschedule" asp-controller="Users" class="btn btn-secondary">Reschedule</a>

                                    </div>
                                    <div class="col-4">
                                        <a asp-action="" asp-controller="" class="btn btn-outline-secondary">Update</a>

                                     
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
                    </div>
                </div>
                </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




